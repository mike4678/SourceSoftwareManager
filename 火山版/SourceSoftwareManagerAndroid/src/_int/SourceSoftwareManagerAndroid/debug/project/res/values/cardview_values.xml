<?xml version="1.0" encoding="utf-8"?>
<resources>
    <attr format="reference" name="hcardViewStyle"/>
    <color name="hcardview_dark_background">#FF424242</color>
    <color name="hcardview_light_background">#FFFFFFFF</color>
    <color name="hcardview_shadow_end_color">#03000000</color>
    <color name="chcardview_shadow_start_color">#37000000</color>

    <dimen name="hcardview_compat_inset_shadow">1dp</dimen>
    <dimen name="hcardview_default_elevation">2dp</dimen>
    <dimen name="hcardview_default_radius">2dp</dimen>

    <style name="Base.HCardView" parent="android:Widget">
        <item name="cardCornerRadius">@dimen/hcardview_default_radius</item>
        <item name="cardElevation">@dimen/hcardview_default_elevation</item>
        <item name="cardMaxElevation">@dimen/hcardview_default_elevation</item>
        <item name="cardUseCompatPadding">false</item>
        <item name="cardPreventCornerOverlap">true</item>
    </style>

    <style name="HCardView" parent="Base.HCardView">
    </style>
    <style name="HCardView.Dark">
        <item name="cardBackgroundColor">@color/hcardview_dark_background</item>
    </style>
    <style name="HCardView.Light">
        <item name="cardBackgroundColor">@color/hcardview_light_background</item>
    </style>
</resources>